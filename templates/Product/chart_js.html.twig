<script>
    var nqColor = {
        bg:   'rgba(200, 200, 200, 0.15)',
        line: 'rgba(200, 200, 200, 1)'
    };
    var hqColor = {
        bg:   'rgba(250, 230, 70, 0.15)',
        line: 'rgba(250, 230, 70, 1)'
    };

    var xAxis = {
        gridLines: {
            display: false
        },
        ticks: {
            display: false
        }
    };
    var yAxis = {
        gridLines: {
            color: '#444',
        },
        ticks: {
            callback: (value) => {
                return numeral(value).format('0,0')
            }
        }
    };

    var chartScales = {
        xAxes: [xAxis],
        yAxes: [yAxis]
    };
    var chartLayout = {
        padding: {
            left: 10,
            right: 20,
            top: 10,
            bottom: 10
        }
    };
    var chartCallbacks = (quantityDataSet, serverList) => {
        return {
            title: (tooltipItem, data) => {
                var number = '#'+ (tooltipItem[0].index + 1);
                return number +': '+ data.datasets[tooltipItem[0].datasetIndex].label.toUpperCase();
            },
            label: (tooltipItem, data) => {
                var dataSetIndex = tooltipItem.datasetIndex;
                var index = tooltipItem.index;

                var quantity = quantityDataSet[dataSetIndex][index],
                    price = numeral(tooltipItem.yLabel).format('0,0');

                var text = price +' x '+ quantity;

                var server = data.datasets[dataSetIndex].data[index].server;

                // try get from server list
                if (serverList && typeof server === 'undefined') {
                    server = serverList[dataSetIndex][index];
                }

                if (typeof server !== 'undefined') {
                    text = text + ' ('+ server +')';
                }

                return text;
            },
            footer: (tooltipItem, data) => {
                var dataSetIndex = tooltipItem[0].datasetIndex;
                var index = tooltipItem[0].index;

                var quantity = quantityDataSet[dataSetIndex][index],
                    total = numeral(tooltipItem[0].yLabel * quantity).format('0,0');

                return 'Total: '+ total;
            }
        };
    };

    var renderChart = (
        id,
        chartType,
        chartLabel,
        dataBorderWidth,
        dataMax,
        dataQuantities,
        dataHqArray,
        dataNqArray,
        labels,
        yAxisMax,
        yAxisMin,
        serverList
    ) => {
        chartScales.xAxes[0].ticks.max = dataMax - 1;

        if (yAxisMax) {
            //chartScales.yAxes[0].ticks.max = yAxisMax;
        }

        if (yAxisMin) {
            //chartScales.yAxes[0].ticks.min = yAxisMin;
        }

        new Chart(document.getElementById(id), {
            type: chartType,
            data: {
                labels: labels,
                datasets: [{
                    label: chartLabel[0],
                    data: dataHqArray,
                    backgroundColor: hqColor.bg,
                    borderColor: hqColor.line,
                    borderWidth: dataBorderWidth,
                    lineTension: 0,
                    pointRadius: 2,
                    pointBorderWidth: 3,
                },{
                    label: chartLabel[1],
                    data: dataNqArray,
                    backgroundColor: nqColor.bg,
                    borderColor: nqColor.line,
                    borderWidth: dataBorderWidth,
                    lineTension: 0,
                    pointRadius: 2,
                    pointBorderWidth: 3,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                animation: false,
                legend: {
                    display: false
                },
                title: {
                    display: false,
                },
                tooltips: {
                    displayColors: false,
                    intersect: false,
                    tooltips: {
                        mode: 'nearest',
                        intersect: true
                    },
                    titleFontSize: 12,
                    titleMarginBottom: 5,
                    titleFontColor: "rgba(80, 80, 80, 1)",
                    bodyFontSize: 15,
                    bodyFontStyle: "bold",
                    bodyFontColor: "rgba(255, 255, 255, 1)",
                    footerFontSize: 13,
                    footerFontColor: "rgba(160, 160, 160, 1)",
                    callbacks: chartCallbacks(dataQuantities, serverList)
                },
                scales: chartScales,
                layout: chartLayout
            }
        });
    }
</script>
