<div class="highchart">
    <div id="{{ chart.id }}"></div>
</div>
<script>
// Create the chart
var chart{{ chart.id }} = Highcharts.stockChart('{{ chart.id }}', {
    credits: {
        enabled: false
    },

    scrollbar: {
        enabled: false
    },

    legend: {
        enabled: true
    },

    chart: {
        animation: false
    },

    rangeSelector: {
        selected: 1
    },

    xAxis: [
        {
            range: (60 * 60 * 24 * 30) * 1000
        },
        {
            range: (60 * 60 * 24 * 30) * 1000
        }
    ],

    yAxis: [
        {
            tooltip: {
                formatter: function () {
                    return Highcharts.numberFormat(this.value, 0, ',', '.');
                }
            }
        },
        {
            tooltip: {
                formatter: function () {
                    return Highcharts.numberFormat(this.value, 0, ',', '.');
                }
            }
        }
    ],

    series: {{ chart.series|json_encode|raw }}
});

window.chart{{ chart.id }}.addSeries({
    xAxis: 1,
    yAxis: 1,
    type: "line",
    enableMouseTracking: false,
    isInternal: true,
    data : {{ chart.series|json_encode|raw }},
    showInLegend:false
});
</script>
