<div>
    <div class="header-home">
        <a href="{{ path('home') }}" class="btn-home">
            <img src="/i/mog/mog.png">
        </a>
    </div>
    <div class="header-nav">
        <img src="/i/svg/loading3.svg" class="search-loading">
        <input type="text" class="search" placeholder="Search">
        <button class="btn-market-board">
            <i class="xiv-Market"></i>
            <span>Market</span>
        </button>
        <button class="btn-menu">
            <span>Menu</span>
        </button>
        {#
        <a href="https://www.patreon.com/join/vekien" target="_blank" class="btn-patron" data-tippy-content="Support Mogboard.com via Patreon!">
            <img src="/i/brand/patreon/logo.jpg">
        </a>
        #}
    </div>
</div>
<div>
    {% if auth.online() %}
    <div>
        <a href="{{ path('user_account') }}">My Account</a>
        <span class="username">{{ auth.user.username|title }}</span>
    </div>
    {% else %}
        <a href="{{ path('account_login_discord') }}" class="btn-login">Login via Discord</a>
    {% endif %}
    <div>
        <button class="btn-settings" data-tippy-content="Site Settings"><span class="xiv-app_drawer_setting"></span></button>
    </div>
</div>
